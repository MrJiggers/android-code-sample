<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="16dp"
	android:layout_marginEnd="16dp"
	android:layout_marginBottom="16dp"
	android:background="@drawable/background_rocket_card"
	android:clickable="true"
	android:focusable="true"
	app:cardCornerRadius="8dp">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/rowRocketImage"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:layout_marginStart="24dp"
			android:layout_marginTop="16dp"
			android:layout_marginBottom="16dp"
			android:contentDescription="@string/row_rocket_image_description"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent" />

		<TextView
			android:id="@+id/rowRocketTitle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginEnd="16dp"
			android:ellipsize="end"
			android:maxLines="1"
			android:textColor="@color/titleColor"
			android:textSize="24sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/rowRocketImage"
			app:layout_constraintTop_toTopOf="@id/rowRocketImage"
			tools:text="Falcon 9" />

		<TextView
			android:id="@+id/rowRocketCompany"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="8dp"
			android:layout_marginEnd="16dp"
			android:textSize="18sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/rowRocketImage"
			app:layout_constraintTop_toBottomOf="@id/rowRocketTitle"
			tools:text="Space-X" />

		<TextView
			android:id="@+id/rowRocketFirstFlight"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="16dp"
			android:layout_marginTop="4dp"
			android:layout_marginEnd="16dp"
			android:textSize="18sp"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/rowRocketImage"
			app:layout_constraintTop_toBottomOf="@id/rowRocketCompany"
			tools:text="2020-02-08" />
	</androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>